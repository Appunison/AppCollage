<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_appcollage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/dialog_bg"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/yellow"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10" 
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_15"
                android:contentDescription="@null"
                android:src="@drawable/appcollage_logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_10" >

            <TextView
                style="@style/txt_base"
                android:layout_width="match_parent"
                android:gravity="center"
                android:singleLine="false"
                android:text="@string/delete_msg"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_20" />
            <TextView
                style="@style/txt_base"
                android:layout_width="match_parent"
                android:gravity="center"
                android:singleLine="false"
                android:layout_margin="@dimen/dp_10"
                android:text="@string/are_you_sure"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_delete_msg_cancel"
                    style="@style/btn_base"
                    android:layout_width="@dimen/dp_80"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="@string/cancel" />

                <Button
                    android:id="@+id/btn_delete_msg_ok"
                    style="@style/btn_base"
                    android:layout_width="@dimen/dp_80"
                    android:text="@string/ok" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
