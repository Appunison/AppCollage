<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="horizontal"
    android:baselineAligned="false" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_14"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/yellow">

        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:contentDescription="@null"
            android:src="@drawable/appcollage_logo" />
        <Button
                android:id="@+id/btn_dialog_share_cancel"
                style="@style/btn_base"
                android:text="@string/cancel" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/dp_15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_dialog_alert"
            android:layout_width="match_parent"
            style="@style/txt_base"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/share_msg"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center"
            android:orientation="horizontal" >
			<LinearLayout 
			    android:id="@+id/layout_dialog_share_facebook"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginRight="@dimen/dp_15"
			    android:gravity="center"
			    android:orientation="vertical">
			    <ImageView 
			        android:layout_width="@dimen/dp_40"
			        android:layout_height="@dimen/dp_40"
			        android:contentDescription="@null"
			        android:src="@drawable/facebookicon"/>
			    <TextView 
			        style="@style/txt_base"
			        android:textColor="@android:color/white"
            		android:text="@string/share_fb"
            		android:layout_marginTop="@dimen/dp_5"
            		android:singleLine="false"
            		android:gravity="center"
            		android:textSize="@dimen/sp_10"/>
			</LinearLayout>
			<LinearLayout 
			    android:id="@+id/layout_dialog_share_twitter"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginRight="@dimen/dp_15"
			    android:gravity="center"
			    android:orientation="vertical">
			    <ImageView 
			        android:layout_width="@dimen/dp_40"
			        android:layout_height="@dimen/dp_40"
			        android:contentDescription="@null"
			        android:src="@drawable/twittericon"/>
			    <TextView 
			        style="@style/txt_base"
			        android:textColor="@android:color/white"
			        android:layout_marginTop="@dimen/dp_5"
            		android:text="@string/share_tw"
            		android:singleLine="false"
            		android:gravity="center"
            		android:textSize="@dimen/sp_10"/>
			</LinearLayout>
			<LinearLayout 
			    android:id="@+id/layout_dialog_share_email"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:gravity="center"
			    android:orientation="vertical">
			    <ImageView 
			        android:layout_width="@dimen/dp_40"
			        android:layout_height="@dimen/dp_40"
			        android:contentDescription="@null"
			        android:src="@drawable/emailicon"/>
			    <TextView 
			        style="@style/txt_base"
			        android:textColor="@android:color/white"
			        android:layout_marginTop="@dimen/dp_5"
            		android:text="@string/share_email"
            		android:singleLine="false"
            		android:gravity="center"
            		android:textSize="@dimen/sp_10"/>
			</LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
