<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_appcollage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/dialog_bg"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/dialog_bg"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/yellow"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10" >

                <ImageView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginTop="@dimen/dp_15"
                    android:contentDescription="@null"
                    android:src="@drawable/appcollage_logo" />

                <TextView
                    android:id="@+id/txt_initiate_appcollage_timer"
                    style="@style/txt_base"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_30"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dp_10" >

                <TextView
                    android:id="@+id/txt_initiate_appcollage_header"
                    style="@style/txt_base"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="@string/AppCollage_request"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/txt_initiate_appcollage_user"
                    style="@style/txt_base"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="@string/initiate_appcollage_msg2_user"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/txt_initiate_appcollage_group"
                    style="@style/txt_base"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="@string/initiate_appcollage_msg3_group"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/txt"
                    style="@style/txt_base"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="@string/initiate_appcollage_msg4"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/txt_initiate_appcollage_group_msg"
                    style="@style/txt_base"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:singleLine="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5" >

            <Button
                android:id="@+id/btn_initiate_appcollage"
                style="@style/btn_base"
                android:layout_width="@dimen/dp_80"
                android:layout_marginRight="@dimen/dp_5"
                android:text="@string/appcollage" />

            <Button
                android:id="@+id/btn_initiate_appcollage_no"
                style="@style/btn_base"
                android:layout_width="@dimen/dp_80"
                android:text="@string/no_appcollage" />

            <Button
                android:id="@+id/btn_initiate_appcollage_cancel"
                style="@style/btn_base"
                android:layout_width="@dimen/dp_80"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/cancel"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>