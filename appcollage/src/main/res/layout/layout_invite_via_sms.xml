<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical" >

    <include layout="@layout/layout_action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_sms_title"
                style="@style/txt_base"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/text"
                android:textColor="@color/c8b8b8b"
                android:textSize="@dimen/sp_18" />

            <Spinner
                android:id="@+id/spinner_invite_via_sms_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_25"
                android:spinnerMode="dropdown" />

            <EditText
                android:id="@+id/edt_invite_via_sms"
                style="@style/edit"
                android:hint="@string/enter_phone_number"
                android:inputType="number"
                android:textColor="@color/c909090" />

            
            <EditText
                android:id="@+id/edt_invite_via_sms_massage"
                style="@style/edit"
                android:layout_height="@dimen/dp_200"
                android:gravity="center|top"
                android:hint="@string/text"
                android:maxLength="255"
                android:singleLine="false"
                android:textColor="@color/c909090" />
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
            <TextView
                style="@style/txt_base"
                android:layout_height="@dimen/dp_35"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="@string/tap_invitiation_text_above_to_edit"
                android:textColor="@color/c909090"
                android:textSize="@dimen/sp_12" />
            <TextView 
                android:id="@+id/txt_counter"
                style="@style/txt_base"
                android:layout_height="@dimen/dp_35"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="@string/text255"
                android:textColor="@color/c909090"
                android:textSize="@dimen/sp_14"/>
		</LinearLayout>
            <Button
                android:id="@+id/btn_invite_via_sms_send"
                style="@style/btn_base"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="@string/send" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>