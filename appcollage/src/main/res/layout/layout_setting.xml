<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical" >

    <include layout="@layout/layout_action_bar" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout_setting_account"
            style="@style/layout_home"
            android:layout_marginBottom="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:src="@drawable/account" />

            <TextView
                style="@style/txt_home"
                android:text="@string/account" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_setting_default_texts"
            style="@style/layout_home"
            android:padding="@dimen/dp_8" 
            android:layout_marginBottom="@dimen/dp_35" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:src="@drawable/default_text" />

            <TextView
                style="@style/txt_home"
                android:text="@string/default_texts" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout_setting_help"
            style="@style/layout_home"
            android:layout_marginBottom="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:src="@drawable/help" />

            <TextView
                style="@style/txt_home"
                android:text="@string/help" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_setting_remove"
            style="@style/layout_home"
            android:layout_marginBottom="@dimen/dp_35" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:src="@drawable/remove_1" />

            <TextView
                style="@style/txt_home"
                android:text="@string/remove" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout_setting_edit_grorp"
            style="@style/layout_home"
            android:layout_marginBottom="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:src="@drawable/edit_group" />

            <TextView
                style="@style/txt_home"
                android:text="@string/edit_group" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_setting_delete"
            style="@style/layout_home"
            android:layout_marginBottom="@dimen/dp_35"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:src="@drawable/delete" />

            <TextView
                style="@style/txt_home"
                android:text="@string/delete" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>