<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="horizontal"
    android:baselineAligned="false" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/yellow">

        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:contentDescription="@null"
            android:src="@drawable/appcollage_logo" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/dp_14"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_dialog_alert"
            android:layout_width="match_parent"
            style="@style/txt_base"
            android:gravity="center"
            android:singleLine="false"
            android:textColor="@android:color/white"
            android:text="@string/remove_group"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_dialog_delete_group_no"
                style="@style/btn_base"
                android:layout_width="@dimen/dp_80"
                android:layout_marginRight="@dimen/dp_15"
                android:text="@string/no" />

            <Button
                android:id="@+id/btn_dialog_delete_group_yes"
                style="@style/btn_base"
                android:layout_width="@dimen/dp_80"
                android:text="@string/yes" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>